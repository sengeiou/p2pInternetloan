<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.p2pInternetloan.sys.dao.RoleDao">
    
     <!-- 数据库与实体的映射对象 -->
    <resultMap type="com.p2pInternetloan.sys.entity.Role" id="RoleMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleDesc" column="role_desc" jdbcType="VARCHAR"/>
        <result property="roleFlag" column="role_flag" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleMap">
        select
          role_id, role_name, role_desc, role_flag
        from role
        where role_id = #{roleId}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryPager" resultMap="RoleMap">
        select
          role_id, role_name, role_desc, role_flag
        from role
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                and role_desc = #{roleDesc}
            </if>
            <if test="roleFlag != null">
                and role_flag = #{roleFlag}
            </if>
        </where>
    </select>
    <select id="queryByName" resultMap="RoleMap">
        select  role_id, role_name, role_desc, role_flag  from role where role_name = #{roleName}
    </select>
    <select id="getRoleSelect" resultType="java.util.Map">
        select role_id as roleId, role_name as roleName from role
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into role(role_name, role_desc, role_flag)
        values (#{roleName}, #{roleDesc}, #{roleFlag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                role_desc = #{roleDesc},
            </if>
            <if test="roleFlag != null">
                role_flag = #{roleFlag},
            </if>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from role where role_id = #{roleId}
    </delete>
    
</mapper>