<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.p2pInternetloan.sys.dao.RolePermissionDao">

    <resultMap type="com.p2pInternetloan.sys.entity.RolePermission" id="RolePermissionMap">
        <result property="roleid" column="roleid" jdbcType="INTEGER"/>
        <result property="perid" column="perid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RolePermissionMap">
        select
          roleid, perid
        from role_permission
        where roleid = #{roleid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RolePermissionMap">
        select
          roleid, perid
        from role_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RolePermissionMap">
        select
          roleid, perid
        from role_permission
        <where>
            <if test="roleid != null">
                and roleid = #{roleid}
            </if>
            <if test="perid != null">
                and perid = #{perid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleid" useGeneratedKeys="true">
        insert into role_permission()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update role_permission
        <set>
        </set>
        where roleid = #{roleid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from role_permission where roleid = #{roleid}
    </delete>
    
</mapper>