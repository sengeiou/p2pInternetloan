<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.p2pInternetloan.sys.dao.UserRoleDao">

    <resultMap type="com.p2pInternetloan.sys.entity.UserRole" id="UserRoleMap">
        <result property="userid" column="userid" jdbcType="INTEGER"/>
        <result property="roleid" column="roleid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserRoleMap">
        select
          userid, roleid
        from user_role
        where userid = #{userid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserRoleMap">
        select
          userid, roleid
        from user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserRoleMap">
        select
          userid, roleid
        from user_role
        <where>
            <if test="userid != null">
                and userid = #{userid}
            </if>
            <if test="roleid != null">
                and roleid = #{roleid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userid" useGeneratedKeys="true">
        insert into user_role()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user_role
        <set>
        </set>
        where userid = #{userid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user_role where userid = #{userid}
    </delete>
    
</mapper>