<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.p2pInternetloan.borrowing.dao.BidDao">
    
     <!-- 数据库与实体的映射对象 -->
    <resultMap type="com.p2pInternetloan.borrowing.entity.Bid" id="BidMap">
        <result property="id" column="id" jdbcType="LONG INTEGER"/>
        <result property="actualRate" column="actual_rate" jdbcType="NUMERIC"/>
        <result property="availableAmount" column="available_amount" jdbcType="NUMERIC"/>
        <result property="bidRequestId" column="bid_request_id" jdbcType="LONG INTEGER"/>
        <result property="membersId" column="members_id" jdbcType="LONG INTEGER"/>
        <result property="bidTime" column="bid_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BidMap">
        select
          id, actual_rate, available_amount, bid_request_id, members_id, bid_time
        from bid
        where id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryPager" resultMap="BidMap">
        select
          id, actual_rate, available_amount, bid_request_id, members_id, bid_time
        from bid
        <where>
                <if test="id != null">
                and id = #{id}
            </if>   
                <if test="actualRate != null">
                and actual_rate = #{actualRate}
            </if>   
                <if test="availableAmount != null">
                and available_amount = #{availableAmount}
            </if>   
                <if test="bidRequestId != null">
                and bid_request_id = #{bidRequestId}
            </if>   
                <if test="membersId != null">
                and members_id = #{membersId}
            </if>   
                <if test="bidTime != null">
                and bid_time = #{bidTime}
            </if>   
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into bid(actual_rate, available_amount, bid_request_id, members_id, bid_time)
        values (#{actualRate}, #{availableAmount}, #{bidRequestId}, #{membersId}, #{bidTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update bid
        <set>
            <if test="actualRate != null">
                actual_rate = #{actualRate},
            </if>
            <if test="availableAmount != null">
                available_amount = #{availableAmount},
            </if>
            <if test="bidRequestId != null">
                bid_request_id = #{bidRequestId},
            </if>
            <if test="membersId != null">''
                members_id = #{membersId},
            </if>
            <if test="bidTime != null">
                bid_time = #{bidTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from bid where id = #{id}
    </delete>
    
</mapper>